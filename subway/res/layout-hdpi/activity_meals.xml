<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:subway="http://schemas.android.com/apk/res/com.subway"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:id="@+id/layoutHeader"
        
        >

            <ImageButton
                android:id="@+id/imageButtonLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_btn_weibo_login_off" />

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/subway_logo" />
            <LinearLayout 
                android:id="@+id/imageButtonHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_yellow_off"
                >
              <ImageView
                android:id="@+id/imageButtonLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/logo_storelocator" />
              
                <com.subway.view.OutlineTextView
	                android:id="@+id/textHome"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#ffffff"
		            android:textSize="13sp"
		            android:layout_marginTop="2dp"
		            android:layout_gravity="center"
		            subway:fillColor="#FFFFFFFF"
		            subway:smallCharacters="14"
		            subway:strokeColor="#295a04"
		            android:gravity="center_horizontal"
		            subway:strokeWidth="5dp" 
		            android:text="@string/home"
	                />
              </LinearLayout>
            
        </LinearLayout>
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:id="@+id/layoutContent"
        android:layout_below="@id/layoutHeader"
        
        >
             <RelativeLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="200dp"
                 android:gravity="center_horizontal"
                 >
                <ImageView
                     android:id="@+id/imageViewSubBack"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="100dp"
                     android:src="@drawable/home_sub_background" />
                 <ImageView
                     android:id="@+id/imageViewSub"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="20dp"
                     android:layout_centerHorizontal="true"
                     android:layout_gravity="center_horizontal"
                     android:background="@drawable/home_sub" />
                 <ImageView
                     android:id="@+id/imageViewSubOfTheDay"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="top"
                     android:layout_marginLeft="5dp"
                     android:src="@drawable/logo_suboftheday" />
                     
                 
             </RelativeLayout>
              
              
          </LinearLayout>
          
             <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/layoutContent"
        android:layout_alignParentBottom="true"
        
        
        >
      
                 <LinearLayout
                     android:id="@+id/layoutCatering"
                     android:layout_width="110dp"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:gravity="center_horizontal"
                     android:background="@drawable/home_footer_btn_menu_off" >

                     
                     <com.subway.view.OutlineTextView
	                android:id="@+id/textChooseAllMenu"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#ffffff"
		            android:textSize="15sp"
		            android:layout_marginLeft="5dp"
		            android:layout_marginTop="5dp"
		            android:layout_gravity="center"
		            subway:fillColor="#FFFFFFFF"
		            subway:smallCharacters="17"
		            subway:strokeColor="#295a04"
		            android:gravity="center_horizontal"
		            subway:strokeWidth="5dp" 
		            android:text="@string/catering"
	                />

                 </LinearLayout>
                      <LinearLayout
                     android:id="@+id/layoutOptions"
                     android:layout_width="110dp"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:gravity="center_horizontal"
                     android:background="@drawable/home_footer_btn_menu_off" >

                     
                     <com.subway.view.OutlineTextView
	                android:id="@+id/textChooseAllMenu"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#ffffff"
		            android:textSize="15sp"
		            android:layout_marginLeft="5dp"
		            android:layout_marginTop="5dp"
		            android:layout_gravity="center"
		       
		            subway:fillColor="#FFFFFFFF"
		            subway:smallCharacters="17"
		            subway:strokeColor="#295a04"
		            android:gravity="center_horizontal"
		            subway:strokeWidth="5dp" 
		            android:text="@string/options"
	                />

                 </LinearLayout>

                 <LinearLayout
                     android:id="@+id/layoutFooterCoupon"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center_horizontal"
                     android:background="@drawable/home_footer_btn_coupons_off"
                     android:orientation="vertical" >
                 
                        <com.subway.view.OutlineTextView
	                android:id="@+id/textHowTo"
		            android:layout_width="wrap_content"
		            android:layout_height="12dp"
		            android:textColor="#ffffff"
		            android:textSize="12sp"
		            android:layout_marginLeft="5dp"
		            android:layout_marginTop="8dp"
		            android:layout_gravity="center_horizontal"
		            subway:fillColor="#FFFFFFFF"
		            subway:smallCharacters="12"
		            subway:strokeColor="#295a04"
		            android:gravity="center_horizontal"
		            subway:strokeWidth="5dp" 
		            android:text="@string/how_to"
	                />
                     
                    <com.subway.view.OutlineTextView
	                android:id="@+id/textOrder"
		            android:layout_width="wrap_content"
		            android:layout_height="18dp"
		            android:layout_marginTop="-5dp"
		            android:textColor="#ffffff"
		            android:textSize="16sp"
		            android:layout_marginLeft="5dp"
		            android:layout_gravity="center"
		            subway:fillColor="#FFFFFFFF"
		            subway:smallCharacters="12"
		            subway:strokeColor="#295a04"
		            android:gravity="center_horizontal"
		            subway:strokeWidth="5dp" 
		            android:text="@string/order"
	                />
                 </LinearLayout>
             
        </LinearLayout>
          
        
    </RelativeLayout>


</RelativeLayout>